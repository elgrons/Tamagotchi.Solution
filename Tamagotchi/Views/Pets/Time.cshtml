<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    <h1>@Model.Name</h1>
    <h3>Hunger: @Model.Hunger</h3>
    <h3>Happiness: @Model.Happiness</h3>
    <h3>Fatigue: @Model.Fatigue</h3>
    <br>

    @using Tamagotchi.Models;
    @if (@Model.Hunger == 0 || @Model.Happiness == 0 || @Model.Fatigue == 0)
    {
      <h3>Oh no! Something Happened to @Model.Name</h3>
      <form action="/pets/dead" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">click to continue</button>
    </form>
    }
    @if (@Model.Hunger > 0 && @Model.Happiness > 0 && @Model.Fatigue > 0)
    {
      <form action="/pets/feed" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">Give @Model.Name a snack!</button>
    </form>
    <form action="/pets/joy" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">Play with @Model.Name!</button>
    </form>
    <form action="/pets/slumber" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">Put @Model.Name to sleep!</button>
    </form>
    <form action="/pets/foodfight" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">Have a food fight with @Model.Name!</button>
    </form>
    <form action="/pets/time" method="post">
      <input name="id" type="hidden" value="@Model.Id">
      <button type="submit" name="button">Pass the time</button>
    </form>
    }
    

    <br>
    <a href='/pets/index'>See list of pets</a>
    <br><br>
    <form action="/pets/delete" method="post">
      <button type="submit" name="button">Clear All Pets</button>
    </form>
  </body>
</html>